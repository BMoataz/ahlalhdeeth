<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.18"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:background="@color/gray4"
            android:src="@drawable/user_prof" />

        <com.example.master.ahlalhdeeth.MyCustomTextView
            android:id="@+id/list_autors_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/imageView"
            android:clickable="true"
            android:enabled="true"
            android:linksClickable="false"
            android:longClickable="true"
            android:text="@string/autor"
            android:textSize="14sp" />

        <com.example.master.ahlalhdeeth.MyCustomTextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="#1"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/status_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_autors_textview"
            android:layout_marginBottom="4dp"
            android:layout_toLeftOf="@+id/list_autors_textview"
            android:src="@drawable/online_status" />

        <FrameLayout
            android:id="@+id/layout_quotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_margin="20dp"
            android:visibility="gone">

            <com.example.master.ahlalhdeeth.MyCustomTextView
                android:id="@+id/txt_quotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E1E4F2"
                android:gravity="center"
                android:padding="10.0dp"
                android:text="المشاركة الاصلية تمت بواسطة أم هاجر الواسطية"
                android:textIsSelectable="true"
                android:textSize="14sp" />
        </FrameLayout>

        <com.example.master.ahlalhdeeth.MyCustomTextView
            android:id="@+id/list_subjects_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_quotes"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="أهلا وسهلا بك زائرنا الكريم، إذا كانت هذه زيارتك الأولى للمنتدى، فيرجى التكرم بزيارة صفحة التعليمـــات، بالضغط هنا. كما يشرفنا أن تقوم بالتسجيل بالضغط هنا إذا رغبت بالمشاركة في المنتدى، أما إذا رغبت بقراءة المواضيع والإطلاع فتفضل بزيارة القسم الذي ترغب أدناه."
            android:textIsSelectable="true"
            android:textSize="14sp" />

